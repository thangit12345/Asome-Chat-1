<% newAllConversations.allConversationWithMessages.forEach(function(conversation, index) { %>
  <% if(conversation.members) {%>
<div class="modal fade" id="membersModal_<%= conversation._id %>" role="dialog">
    <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">All the member for the group: <%= conversation.name %>&nbsp; <span>(<%= conversation.membersInfo.length %>&nbsp; Thành viên)</span></h4>
                </div>
                <div class="modal-body">
                    <div class="all-contacts" >
                          <ul class="memberList">
                          <% conversation.membersInfo.forEach(function(member) { %>
                              <li class="_memberList" data-uid="<%=member._id %>">
                                  <div class="contactPanel">
                                      <% if(member._id+"" === user._id+"") { %>
                                          <div class="user-avatar-member">
                                                  <img src="images/users/<%=member.avatar %>" alt="">
                                              </div>
                                              <div class="user-name" style="color: #ff0084">
                                                  <p>
                                                      <%=member.username %>&nbsp;(bạn)
                                                  </p>
                                              </div>
                                      <% } else {%>
                                              <div class="user-avatar-member">
                                                  <img src="images/users/<%=member.avatar %>" alt="">
                                              </div>
                                              <div class="user-name">
                                                  <p>
                                                      <%=member.username %>
                                                  </p>
                                              </div>
                                              <br>
                                              <div class="user-talk" data-uid="<%=member._id %>">
                                                  Trò chuyện
                                              </div>
                                              <% } %>
                                   </div>
                              </li>
                         <% }); %>
                          </ul>
                    </div>
                </div>
            </div>
    </div>
</div>
<% } %>
<% });  %>
